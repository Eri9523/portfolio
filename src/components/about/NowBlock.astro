---
export interface Props {
  title?: string;
  text: string;
  textEs?: string;
}
const { title = 'Now', text, textEs } = Astro.props as Props;
---

<section class="rounded-lg border border-neutral-400 bg-white/50 p-4 shadow-sm backdrop-blur dark:border-neutral-800 dark:bg-neutral-900/50">
  <h2 class="text-sm font-semibold text-neutral-900 dark:text-white" data-i18n-content-en={title} data-i18n-content-es={title === 'Now' ? 'Ahora' : title}>{title}</h2>
  <p class="mt-2 text-sm text-neutral-700 dark:text-neutral-300" data-i18n-content-en={text} data-i18n-content-es={textEs || text}>{text}</p>
</section> 