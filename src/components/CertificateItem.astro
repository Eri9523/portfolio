---
export interface Props {
  title: string;
  issuer: string;
  date?: string;
  href?: string;
}
const { title, issuer, date, href } = Astro.props as Props;
---

<li class="h-24 flex flex-col justify-between rounded-lg border border-neutral-400 dark:border-neutral-800 bg-white/60 dark:bg-neutral-900/50 p-3 shadow-sm backdrop-blur transition-colors hover:bg-white/80 dark:hover:bg-neutral-900/70">
  <div class="min-w-0">
    <p class="truncate text-sm font-semibold text-neutral-900 dark:text-white">{title}</p>
    <p class="mt-0.5 truncate text-xs text-neutral-600 dark:text-neutral-300">{issuer}</p>
  </div>
  <div class="flex items-center justify-between gap-2 pt-1">
    {date && <span class="text-xs text-neutral-500 dark:text-neutral-400">{date}</span>}
    {href && (
      <a href={href} target="_blank" rel="noopener noreferrer" class="inline-flex items-center rounded-md border border-red-600 px-2 py-0.5 text-xs text-red-600 hover:bg-red-600/10 dark:border-red-500 dark:text-red-400">
        View
      </a>
    )}
  </div>
</li> 