---
import Layout from "../layouts/Layout.astro";
import ProjectCard from "../components/ProjectCard.astro";
import { projects } from "../data/projects";
import AnimatedGradient from "../components/AnimatedGradient.astro";
---

<Layout title="Projects â€” Eri" description="Personal projects and experiments.">
  <AnimatedGradient />
  <main class="mx-auto max-w-4xl px-6 py-16">
    <header class="mb-10">
      <h1 class="text-3xl font-bold tracking-tight" data-i18n="projects.title">Projects</h1>
      <p class="mt-2 text-neutral-600 dark:text-neutral-300" data-i18n="projects.subtitle">A selection of personal projects and experiments.</p>
    </header>

    <section class="grid gap-4 sm:grid-cols-2">
      {projects.map((p) => (
        <ProjectCard title={p.title} description={p.description} titleEs={p.titleEs} descriptionEs={p.descriptionEs} tags={p.tags} href={p.href} repo={p.repo} private={p.private} />
      ))}
    </section>
  </main>
</Layout> 