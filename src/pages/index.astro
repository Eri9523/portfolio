---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import MatrixBackground from '../components/MatrixBackground.astro';
import Typewriter from '../components/Typewriter.astro';

const all = await getCollection('writeups');
const posts = all
  .filter((p) => !p.data.draft)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
  .slice(0, 5);
---

<Layout title="Eri — Portfolio" description="Writeups and projects.">
  <MatrixBackground />
  <main class="mx-auto max-w-4xl px-6 py-20">
    <header class="mb-14">
      <p class="text-xl text-neutral-200">Hello, my name is <span class="font-serif text-red-500">Eri</span></p>
      <h1 class="mt-3 text-4xl font-bold tracking-tight text-white">I'm a <span class="text-red-500">Red Hat hacker</span></h1>
      <div class="mt-2 text-2xl font-semibold text-white">
        <Typewriter phrases={["I'm a Red Hat hacker", "I'm a cloud security Engineer"]} typingSpeed={70} deletingSpeed={35} pauseMs={1000} />
      </div>
      <p class="mt-6 max-w-2xl text-neutral-300">Welcome to my portfolio. Explore my writeups and personal projects.</p>
      <div class="mt-8 flex gap-3">
        <a href="/writeups/" class="inline-flex items-center rounded-md bg-red-600 px-5 py-2 text-white hover:bg-red-500">View writeups</a>
        <a href="/about" class="inline-flex items-center rounded-md border border-red-600 px-5 py-2 text-red-600 hover:bg-red-600/10">About</a>
      </div>
    </header>

    <section class="space-y-4">
      <h2 class="text-2xl font-semibold text-white">Latest writeups</h2>
      {posts.length === 0 ? (
        <p class="text-neutral-300">Content coming soon.</p>
      ) : (
        <ul class="divide-y divide-neutral-800 rounded-md border border-neutral-800">
          {posts.map(({ slug, data }) => (
            <li class="p-4 hover:bg-neutral-900/70 transition-colors">
              <a class="flex flex-col gap-1" href={`/writeups/${slug}/`}>
                <span class="text-lg font-medium text-white">{data.title}</span>
                <span class="text-sm text-neutral-400">{data.date.toISOString().slice(0, 10)}{data.tags ? ` · ${data.tags.join(', ')}` : ''}</span>
                {data.summary && <span class="text-neutral-300">{data.summary}</span>}
              </a>
            </li>
          ))}
        </ul>
      )}
    </section>
  </main>
</Layout>
