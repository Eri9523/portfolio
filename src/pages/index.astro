---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const all = await getCollection('writeups');
const posts = all
  .filter((p) => !p.data.draft)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())
  .slice(0, 5);
---

<Layout title="Eri — Pentesting & Seguridad" description="Writeups, investigación y proyectos de seguridad ofensiva.">
  <main class="mx-auto max-w-4xl px-6 py-12">
    <header class="mb-10">
      <h1 class="text-4xl font-bold tracking-tight">Eri — Pentesting & Seguridad</h1>
      <p class="mt-2 text-neutral-600 dark:text-neutral-300">Writeups, investigación y proyectos de seguridad ofensiva.</p>
      <div class="mt-6 flex gap-3">
        <a href="/writeups/" class="inline-flex items-center rounded-md bg-blue-600 px-4 py-2 text-white hover:bg-blue-500">Ver Writeups</a>
        <a href="/about" class="inline-flex items-center rounded-md border px-4 py-2 hover:bg-neutral-100 dark:hover:bg-neutral-900">Sobre mí</a>
        <a href="https://github.com/Eri9523" class="inline-flex items-center rounded-md border px-4 py-2 hover:bg-neutral-100 dark:hover:bg-neutral-900">GitHub</a>
      </div>
    </header>

    <section class="space-y-4">
      <h2 class="text-2xl font-semibold">Últimos writeups</h2>
      {posts.length === 0 ? (
        <p class="text-neutral-600 dark:text-neutral-300">Pronto habrá contenido.</p>
      ) : (
        <ul class="divide-y divide-neutral-200 dark:divide-neutral-800 rounded-md border border-neutral-200 dark:border-neutral-800">
          {posts.map(({ slug, data }) => (
            <li class="p-4 hover:bg-neutral-50 dark:hover:bg-neutral-900 transition-colors">
              <a class="flex flex-col gap-1" href={`/writeups/${slug}/`}>
                <span class="text-lg font-medium">{data.title}</span>
                <span class="text-sm text-neutral-500">{data.date.toISOString().slice(0, 10)}{data.tags ? ` · ${data.tags.join(', ')}` : ''}</span>
                {data.summary && <span class="text-neutral-700 dark:text-neutral-300">{data.summary}</span>}
              </a>
            </li>
          ))}
        </ul>
      )}
    </section>
  </main>
</Layout>
