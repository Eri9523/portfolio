---
import Layout from '../layouts/Layout.astro';
import MatrixBackground from '../components/MatrixBackground.astro';
import Typewriter from '../components/Typewriter.astro';
import { specializations } from '../data/specializations';
import ProjectCard from '../components/ProjectCard.astro';
import { projects } from '../data/projects';
import { certificates } from '../data/certificates';
import CertificateItem from '../components/CertificateItem.astro';

const featured = projects.filter((p) => p.featured).slice(0, 2);
const certs = certificates.slice(0, 4);
---

<Layout title="Eri â€” Portfolio" description="Writeups and projects.">
  <MatrixBackground />
  <main class="mx-auto max-w-4xl px-6 py-20">
    <header class="mb-14">
      <p class="text-xl text-neutral-700 dark:text-neutral-200"><span data-i18n="home.greeting">Hi, there I'm</span> <span class="font-serif text-red-500">Sergio Corral</span></p>
      <h1 class="mt-3 text-4xl font-bold tracking-tight text-neutral-900 dark:text-white"><span data-i18n="home.titleStatic">Breaking Â· Building</span><br class="hidden sm:inline" /><span class="text-red-600 dark:text-red-500"><Typewriter phrases={specializations} typingSpeed={70} deletingSpeed={35} pauseMs={1000} /></span></h1>
      <p class="mt-6 max-w-2xl text-neutral-600 dark:text-neutral-300"><span data-i18n="home.subtitle1">Red Teaming and DevOps</span><br/><span data-i18n="home.subtitle2" data-i18n-content-en="Strong background in Blockchain and Python development." data-i18n-content-es="Amplia experiencia en desarrollo Blockchain y Python.">Strong background in Blockchain and Python development.</span></p>
      <div class="mt-8 flex gap-3">
        <a href={`${import.meta.env.BASE_URL}about`} class="inline-flex items-center rounded-md bg-red-600 px-5 py-2 text-white hover:bg-red-500 dark:hover:bg-red-500/90"><span data-i18n="home.btnAbout" data-i18n-content-en="About me" data-i18n-content-es="Sobre mÃ­">About me</span></a>
        <a href={`${import.meta.env.BASE_URL}cv.pdf`} target="_blank" rel="noopener noreferrer" class="inline-flex items-center rounded-md border border-red-600 px-5 py-2 text-red-600 hover:bg-red-600/10 dark:border-red-500 dark:text-red-400"><span data-i18n="home.btnDownloadCV" data-i18n-content-en="Download CV" data-i18n-content-es="Descargar CV">Download CV</span></a>
      </div>
      
      <div class="mt-6 rounded-lg border border-red-600/20 bg-red-50 p-4 dark:border-red-500/20 dark:bg-red-950/20">
        <div class="flex items-center gap-2">
          <span class="text-red-600 dark:text-red-400">ðŸ”´</span>
          <p class="text-sm font-medium text-red-800 dark:text-red-200">
            <span data-i18n="home.jobStatus" data-i18n-content-en="Open to work" data-i18n-content-es="Disponible para trabajar">Open to work</span>
          </p>
        </div>
      </div>
    </header>

    {certs.length > 0 && (
      <section class="mb-12 space-y-3">
        <h2 class="text-2xl font-semibold text-neutral-900 dark:text-white" data-i18n="home.certsTitle">Certificates</h2>
        <ul class="grid gap-3 sm:grid-cols-2">
          {certs.map((c) => (
            <CertificateItem {...c} />
          ))}
        </ul>
        <div>
          <a href={`${import.meta.env.BASE_URL}certificates`} class="inline-flex items-center rounded-md border border-red-600 px-3 py-1 text-sm text-red-600 hover:bg-red-600/10 dark:border-red-500 dark:text-red-400"><span data-i18n="home.viewAllCerts" data-i18n-content-en="View all certificates" data-i18n-content-es="Ver todos los certificados">View all certificates</span></a>
        </div>
      </section>
    )}

    {featured.length > 0 && (
      <section class="mb-12 space-y-3">
        <h2 class="text-2xl font-semibold text-neutral-900 dark:text-white" data-i18n="home.featuredTitle">Featured projects</h2>
        <div class="grid gap-4 sm:grid-cols-2">
          {featured.map((p) => (
            <ProjectCard {...p} />
          ))}
        </div>
        <div>
          <a href={`${import.meta.env.BASE_URL}projects`} class="inline-flex items-center rounded-md border border-red-600 px-3 py-1 text-sm text-red-600 hover:bg-red-600/10 dark:border-red-500 dark:text-red-400"><span data-i18n="home.viewAllProjects" data-i18n-content-en="View all projects" data-i18n-content-es="Ver todos los proyectos">View all projects</span></a>
        </div>
      </section>
    )}


  </main>
</Layout>
